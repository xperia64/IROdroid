<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xperia64.irodroid.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power"
        android:id="@+id/pwrBtn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onButt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mute"
        android:id="@+id/muteBtn"
        android:layout_below="@+id/pwrBtn"
        android:layout_alignParentStart="true"
        android:onClick="onButt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/homeBtn"
        android:layout_alignTop="@+id/muteBtn"
        android:layout_alignParentEnd="true"
        android:onClick="onButt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:id="@+id/upBtn"
        android:layout_below="@+id/muteBtn"
        android:layout_centerHorizontal="true"
        android:onClick="onButt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/okBtn"
        android:layout_below="@+id/upBtn"
        android:layout_centerHorizontal="true"
        android:onClick="onButt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/leftBtn"
        android:layout_below="@+id/upBtn"
        android:layout_toStartOf="@+id/upBtn"
        android:onClick="onButt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:id="@+id/rightBtn"
        android:layout_below="@+id/upBtn"
        android:layout_toEndOf="@+id/okBtn"
        android:onClick="onButt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down"
        android:id="@+id/downBtn"
        android:layout_below="@+id/okBtn"
        android:layout_centerHorizontal="true"
        android:onClick="onButt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:id="@+id/menuBtn"
        android:layout_below="@+id/downBtn"
        android:layout_alignParentStart="true"
        android:onClick="onButt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backBtn"
        android:layout_below="@+id/downBtn"
        android:layout_alignParentEnd="true"
        android:onClick="onButt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vol+"
        android:id="@+id/volP"
        android:layout_below="@+id/backBtn"
        android:layout_alignParentEnd="true"
        android:onClick="onButt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vol-"
        android:id="@+id/volM"
        android:layout_below="@+id/menuBtn"
        android:layout_alignParentStart="true"
        android:onClick="onButt"/>
</RelativeLayout>
</ScrollView>
</LinearLayout>
